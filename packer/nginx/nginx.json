{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-d651b8ac",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "nginx-server {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "shell/default.sh",
      "pause_before": "10s"
    },
    {
      "type": "ansible-local",
      "galaxy_file": "ansible/requirements.yml",
      "playbook_file": "ansible/nginx.yml"
    }
  ]
}